daml 1.2
module Main where

import DA.TextMap

data AllTypes = AllTypes {
  unit: ();
  bool: Bool;
  int: Int;
  text: Text;
  date: Date;
  time: Time;
  party: Party;
  contractId: ContractId Person;
  optional: Optional Int;
  list: [Bool];
  textMap: TextMap Party;
  monoRecord: Person;
  polyRecord: Pair Date Time
}

data Person = Person {
  name: Text;
  party: Party;
  age: Int
}

data Pair a b = Pair {
  one: a;
  two: b
}

data Bar a = Bar {
  u: a
}
data Foo a b = Foo {
  x: Bar a;
  y: Foo b a;
  z: b
}
